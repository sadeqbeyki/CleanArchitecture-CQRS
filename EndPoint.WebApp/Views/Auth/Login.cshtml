@using Identity.Application.DTOs.Auth
@model LoginUserDto


<form asp-controller="Auth" asp-action="Login" method="post" class="user">
    <div class="text-danger" asp-validation-summary="All"></div>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
        <input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Username</label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
</form>
<hr>
<div class="text-center">
    <a class="small" href="#">Forgot Password?</a>
</div>
<div class="text-center">
    <a asp-controller="Account" asp-action="Register" class="small">Sign up !</a>
</div>
